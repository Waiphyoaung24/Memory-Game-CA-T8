<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cl_image"
    android:background="@drawable/selector_image">



    <ImageView
        android:id="@+id/iv_images"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/no_img"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="H,12:12"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </ImageView>

    <FrameLayout
        android:id="@+id/fl_tick"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="gone"
        app:layout_constraintDimensionRatio="H,12:12">

        <ImageView
            android:id="@+id/iv_tick_outer"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/no_sel">

        </ImageView>

        <ImageView
            android:id="@+id/iv_tick_inner"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/sel">

        </ImageView>
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>